#!/usr/bin/env sh

BOR_DIR=/var/lib/bor
BOR_DATA_DIR=/var/lib/bor/data
NODE_DIR=$HOME/node

# create heimdall file
sudo mkdir -p /var/lib/bor

# get address
ADDRESS="`cat $NODE_DIR/bor/address.txt`"

# start bor
bor server \
  --chain=$BOR_DIR/genesis.json \
  --datadir $BOR_DATA_DIR \
  --port 30303 \
  --bor.heimdall "http://localhost:1317" \
  --bor.heimdallWS "ws://localhost:26657/websocket" \
  --http --http.addr '0.0.0.0' \
  --ws --ws.addr '0.0.0.0' --ws.port 8546 --ws.api 'eth,txpool,net,web3,bor'\
  --http.vhosts '*' \
  --http.corsdomain '*' \
  --http.port 8545 \
  --ipcpath $BOR_DATA_DIR/bor.ipc \
  --http.api 'eth,net,web3,txpool,bor,debug' \
  --bor.logs=true \
  --state.scheme="path" \
  --syncmode 'full' \
  --miner.gaslimit '20000000' \
  --txpool.nolocals \
  --txpool.accountslots '128' \
  --txpool.globalslots '20000'  \
  --txpool.lifetime '0h16m0s' \
  --maxpeers 200 \
  --metrics --metrics.expensive \
  --metrics.opencollector-endpoint="127.0.0.1:4317" \
  --parallelevm.enable=false \
  --unlock $ADDRESS \
  --miner.etherbase $ADDRESS \
  --keystore $BOR_DIR/keystore \
  --password $BOR_DIR/password.txt \
  --allow-insecure-unlock \
  --mine
